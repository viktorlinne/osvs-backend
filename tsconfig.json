{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "prisma.config.ts",
    "prisma"
  ]
}
